<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.News.NewsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="22dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp">

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anek_bangla_bold"
                    android:paddingTop="20dp"
                    android:text="Todayâ€™s News"
                    android:textColor="#070707"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="26 June 2025"
                    android:textColor="#040404"
                    android:textSize="16dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="130dp"
                android:layout_height="139dp"
                android:layout_weight="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/cloud" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="1147dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1147dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:background="#E3F3E7"
                    app:cardBackgroundColor="#E4F0E6"
                    app:cardCornerRadius="36dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/anek_bangla_bold"
                            android:lineSpacingExtra="-20dp"
                            android:text="Saving the Earth by Reducing Cloth Waste"
                            android:textColor="#000000"
                            android:textSize="40dp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="5 minutes ago" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="161dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                tools:src="@drawable/photo" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView27"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="By" />

                                <TextView
                                    android:id="@+id/textView28"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:text="Becca Bloom"
                                    android:textColor="#000000"
                                    android:textStyle="italic" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:lineSpacingExtra="5dp"
                            android:text="Every year, millions of tons of clothing end up in landfills, polluting our planet and harming the environment. Fast fashion has made it easy to buy cheap clothes, but many of these items are worn only a few times before being thrown away. "
                            android:textColor="#000000"
                            android:textSize="15dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:background="#E3F3E7"
                    app:cardBackgroundColor="#FFF9E1"
                    app:cardCornerRadius="36dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/anek_bangla_bold"
                            android:lineSpacingExtra="-20dp"
                            android:text="Living Green: Small Steps for a Better Planet"
                            android:textColor="#000000"
                            android:textSize="40dp" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="3 days ago" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="161dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                tools:src="@drawable/photo2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="By" />

                                <TextView
                                    android:id="@+id/textView33"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:text="Chloe L."
                                    android:textColor="#000000"
                                    android:textStyle="italic" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:lineSpacingExtra="5dp"
                            android:text="Living an eco-friendly lifestyle means making everyday choices that help protect the environment. Simple actions like reducing single-use plastics, conserving energy, recycling, and choosing to walk or bike instead of drive can significantly lower pollution and carbon emissions. "
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:background="#E3F3E7"
                    app:cardBackgroundColor="#CBD4BD"
                    app:cardCornerRadius="36dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/anek_bangla_bold"
                            android:lineSpacingExtra="-20dp"
                            android:text="The Power of Green Habits"
                            android:textColor="#000000"
                            android:textSize="40dp" />

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="6 months ago" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="161dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                tools:src="@drawable/photo3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView37"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="By" />

                                <TextView
                                    android:id="@+id/textView38"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:text="Miguel Jackson"
                                    android:textColor="#000000"
                                    android:textStyle="italic" />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat"
                            android:lineSpacingExtra="5dp"
                            android:text="Adopting green habits in daily life can make a big difference in preserving our planet. Turning off unused lights, bringing reusable bags when shopping, and choosing eco-friendly products are simple yet impactful ways to reduce our environmental footprint."
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>