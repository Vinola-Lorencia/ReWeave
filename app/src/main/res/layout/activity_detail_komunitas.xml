<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKomunitasActivity">

    <!-- Community Details Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Community Photo + Name -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="100dp">

                <ImageView
                    android:id="@+id/image_community"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/communityone" />

                <TextView
                    android:id="@+id/text_community_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community Name"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@android:color/darker_gray"
                    android:padding="8dp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"/>
            </FrameLayout>

            <!-- Address -->
            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: Example Street No. 123, Sample City"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="8dp"/>

            <!-- Contact -->
            <TextView
                android:id="@+id/text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact: 08123456789"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Opening Hours -->
            <TextView
                android:id="@+id/text_opening_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opening Hours: 08:00 - 17:00"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="16dp"/>

            <!-- Accepted Clothing Types -->
            <TextView
                android:id="@+id/text_accepted_clothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accepted Clothing Types:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/list_clothing_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Children’s Clothes\n• Adult Clothes\n• Jackets\n• Pants\n• Shoes"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="24dp"/>

            <!-- Donate Button -->
            <Button
                android:id="@+id/button_donate_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donate Now"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_200"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
