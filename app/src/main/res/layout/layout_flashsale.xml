<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/discountBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="62%\nOFF"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/bg_discount_badge"
        android:layout_margin="4dp"
        />

    <ImageView
        android:id="@+id/imvProduk"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/tasdua"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txvNamaProdukFlashSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:text="Upcycled Bag"/>

        <TextView
            android:id="@+id/txvDetail"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berkualitas"/>
        <!-- Harga Awal (dicoret) -->
        <TextView
            android:id="@+id/harga_awal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp250.000"

            android:textSize="16sp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/harga_diskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp150.000"
            android:textSize="16sp"
            android:textColor="@color/purple_200"
            android:layout_marginEnd="8dp" />



    </LinearLayout>

</LinearLayout>