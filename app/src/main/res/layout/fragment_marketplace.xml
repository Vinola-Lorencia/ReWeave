<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.Marketplace.MarketplaceFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reweave Marketplace"
            android:fontFamily="@font/montserratmediums"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imagekeranjang"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/b"
            android:contentDescription="Keranjang" />
    </LinearLayout>

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/purple_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/searchg"
                android:contentDescription="Search Icon" />

            <EditText
                android:id="@+id/edtsearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Search Product"
                android:textSize="13sp"
                android:background="@android:color/transparent"
                android:inputType="text" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Promo Banner -->
    <ImageView
        android:id="@+id/imagepromo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/promo1" />

    <!-- Category Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Reusable Category Card Template -->
        <androidx.cardview.widget.CardView
            android:id="@+id/crdtototebag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imagetas"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/tas"
                    android:contentDescription="Tas" />

                <TextView
                    android:id="@+id/texttas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bag"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crdhat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imagehat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hat"
                    android:contentDescription="Hat" />

                <TextView
                    android:id="@+id/texthat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hat"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crdfashion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imagefashion"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/shirtt"
                    android:contentDescription="Fashion" />

                <TextView
                    android:id="@+id/textfashion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fashion"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crddecor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imagdecor"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/couch"
                    android:contentDescription="Decor" />

                <TextView
                    android:id="@+id/textdecor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decor"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crdseelall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imagemore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/more"
                    android:contentDescription="See All" />

                <TextView
                    android:id="@+id/textseeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Flash Deal Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Flash Deal"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/red">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="10:20:30"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_extrabold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Flash Sale List -->
    <ListView
        android:id="@+id/listViewFlashSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />
</LinearLayout>
