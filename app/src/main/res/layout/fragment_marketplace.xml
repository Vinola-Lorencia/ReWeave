<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Marketplace.MarketplaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:text="Reweave Marketplace"
                android:fontFamily="@font/montserratmediums"
                android:textFontWeight="700"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imagekeranjang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/b"
                android:scaleType="centerInside" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="35dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/purple_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/searchg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside" />

                <EditText
                    android:id="@+id/edtsearch"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:ems="5"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:hint="Search Product" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imagepromo"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@drawable/promo1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/crdtototebag"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="40dp"

                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imagetas"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/tas" />

                <TextView
                    android:id="@+id/texttas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="45dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Bag" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdhat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imagehat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/hat" />

                <TextView
                    android:id="@+id/texthat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="45dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Hat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdfashion"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imagefashion"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shirtt" />

                <TextView
                    android:id="@+id/textfashion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="45dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Fashion" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crddecor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imagdecor"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/couch" />

                <TextView
                    android:id="@+id/textdecor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="45dp"
                    android:text="Decor"
                    android:textSize="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdseelall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imagemore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/more" />

                <TextView
                    android:id="@+id/textseeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="See All"
                    android:textSize="13dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extrabold"
                android:layout_marginLeft="15dp"
                android:text="Flash Deal" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/red">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@color/red"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:text="10:20:30" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewseeall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="See All "
                android:textAlignment="textEnd"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/purple_200" />


        </LinearLayout>

        <ListView
            android:id="@+id/listViewFlashSale"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
    </LinearLayout>


